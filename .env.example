STRIPE_PRICE_BASIC=price_basic_id
STRIPE_PRICE_PRO=price_pro_id
STRIPE_PRICE_ULTRA=price_ultra_id
STRIPE_PRICE_MEGA=price_mega_id

# Stripe (test — used when NODE_ENV!=production, falls back to live if empty)
STRIPE_TEST_SECRET_KEY=sk_test_your-stripe-test-key
STRIPE_TEST_WEBHOOK_SECRET=whsec_your-test-webhook-secret
STRIPE_TEST_PRICE_BASIC=price_test_basic_id
STRIPE_TEST_PRICE_PRO=price_test_pro_id
STRIPE_TEST_PRICE_ULTRA=price_test_ultra_id
STRIPE_TEST_PRICE_MEGA=price_test_mega_id

# Admin

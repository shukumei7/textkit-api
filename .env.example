RAPIDAPI_PROXY_SECRET=your-rapidapi-proxy-secret
LOCAL_API_KEY=dev-local-key-for-testing
NODE_ENV=development

# Database (optional — defaults to ./db/)
DB_PATH=

# JWT Auth
